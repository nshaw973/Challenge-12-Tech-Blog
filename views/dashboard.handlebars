<div class="profile-container">
    {{!-- Welcome --}}
    <h1 class="welcome">Welcome back {{user.name}}!!!</h1>
    {{!-- New Post --}}
    {{> form-details}}
    {{!-- Previous Posts --}}
    {{#if user.blogs.length}}
        <h1 class="welcome">Current Blogposts</h1>
        {{#each user.blogs as |post|}}
            <div class="dashboard-posts">
            {{> blogpost-details}}
                <ul class="post-options">
                    <a class="edit-btn btn" href="/dashboard/{{id}}">EDIT</a>
                    <li><button class="delete-btn btn" post-id="{{id}}">DELETE</button></li>
                </ul>
            </div>
        {{/each}}
        {{else}}
        <h1 class="welcome">No Current Blogposts</h1>
    {{/if}}

</div>

<script src="./js/dashboard.js"></script>