<div class="blog-container" post-id="{{blog.id}}">
    {{> blogpost-details}}
    {{#if comments}}
    {{#each comments as |comment|}}
    <div class="comment-container">
        <h3 class="user-comment">{{comment.user.name}} - {{format_date comment.date_created}}</h3>
        <p class="indv-comment">{{comment.comment}}</p>
    </div>
    {{/each}}
    {{/if}}
    {{#if logged_in}}
    <form class="add-comment-container">
        <textarea id="comment" name="comment" placeholder="Add Comment"></textarea>
        <button type="submit" id="submit-comment">Post Comment</button>
    </form>
    {{else}}
    <div>
        <h1>Please <a href="/login" style="color: rgb(82, 79, 255)">Log in</a> to Add a Comment</h1>
    </div>
    {{/if}}
</div>

<script src="./js/comment.js"></script>