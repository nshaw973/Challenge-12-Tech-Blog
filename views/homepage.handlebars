{{!-- Inserting the blogs into the main page --}}
{{#each blogPosts as |post|}}
<div class="card">
  <div class="card-content">
    <h2 class="card-title">{{post.title}}</h2>
    <h3>By: {{post.user.name}}</h3>
  </div>
  <div class="card-body">
    <p class="card-text">{{post.post}}</p>
  </div>
</div>
{{/each}}